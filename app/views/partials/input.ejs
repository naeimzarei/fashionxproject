<% placeholder = placeholder %>
<% originalPlaceholder = placeholder %>
<% if (!value) { %>
    <% value = '' %>
<% } %>
<% if (errors[name]) { %>
    <% placeholder = errors[name] %>
    <% value = '' %>
<% } %>

<% if (fields !== '') { %>
    <% placeholder = originalPlaceholder %>
    <% value = fields[name] %>
<% } %>

<% if (errors[name]) { %> 
    <% placeholder = errors[name] %>
    <% value = '' %>
<% } %>

<% if (required) { %>
    <input name='<%= name %>' class='<%= classes %>' type='<%= type %>' id='<%= id %>' placeholder='<%= placeholder %>' min='<%= min %>' max='<%= max %>' value='<%= value %>' required>
<% } else { %>
    <input name='<%= name %>' class='<%= classes %>' type='<%= type %>' id='<%= id %>' placeholder='<%= placeholder %>' min='<%= min %>' max='<%= max %>' value='<%= value %>'>
<% } %>