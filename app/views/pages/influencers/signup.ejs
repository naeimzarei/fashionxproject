<!Doctype html>
<html>
    <head>
        <% include ../../partials/head %>
    </head>
    <body>
        <% include ../../partials/logo %>
        <div class='container col-5 mb-5'>
            <form class='bg-grey' action='/influencers/signup' method='post'>
                <div class='form-group pt-3 pl-3 pr-3'>
                    <input name='first_name' class='form-control border-pink' type='text' placeholder='First Name *' required>
                </div>
                <div class="form-group pl-3 pr-3 mb-3">
                    <span id='showPassCheckbox' class='hover text-center align-middle mt-2 text-pink' style='position: absolute; right: 3em;' onclick='showPass()'>
                        Show
                    </span>
                    <input name="password" class="form-control border-pink" type="password" id="passField" placeholder="Password *" required>
                </div>
                
                <div class='form-group pl-3 pr-3'>
                    <input name='email' class='form-control border-pink' type='email' placeholder='Email *' required>
                </div>
                <div class='form-group pl-3 pr-3'>
                    <input name='age' class='form-control border-pink' type='number' placeholder='Age *' min='18' required>
                </div>
                <div class='form-group pl-3 pr-3'>
                    <input name='instagram_handle' class='form-control border-pink' type='text' placeholder='Instagram Handle *' required> 
                </div>
                <div class='form-group pl-3 pr-3'>
                    <input name='blog' class='form-control border-pink' type='text' placeholder='Blog'> 
                </div>
                <div class='form-group form-inline pl-3 pr-3'>
                    <input name='height_ft' class='form-control col-6 border-pink' type='number' placeholder='Height (ft) *' min='1' required> 
                    <input name='height_in' class='form-control col-6 border-pink' type='number' placeholder='(in) *' min='0' max='11' required> 
                </div>
                <div class='form-group pl-3 pr-3'>
                    <input name='weight' class='form-control border-pink' type='number' placeholder='Weight (lbs) *' min='1' required>
                </div>
                <div class='form-group form-inline pl-3 pr-3'>
                    <select name='bust_cup' class='form-control col-sm-6 border-pink' required>
                        <option selected disabled> Bust (cup) *</option>
                        <option>A</option>
                        <option>B</option>
                        <option>C</option>
                        <option>D</option>
                        <option>E</option>
                        <option>F</option>
                        <option>G</option>
                        <option>H</option>
                    </select>
                    <select name='bust_band' class='form-control col-6 border-pink' required>
                        <option selected disabled> (band) *</option>
                        <option>Band A</option>
                        <option>Band B</option>
                        <option>Band C</option> 
                    </select>
                </div>
                <div class='form-group pl-3 pr-3'>
                    <input name='waist' class='form-control border-pink' type='number' placeholder='Waist (in) *' min='1' required> 
                </div>
                <div class='form-group pl-3 pr-3'>
                    <input name='hips' class='form-control border-pink' type='number' placeholder='Hips (in) *' min='1' required> 
                </div>
                <div class='form-group pl-3 pr-3'>
                    <select name='jean_size' class='form-control border-pink' rqeuired>
                        <option selected disabled>Usual Jean Size *</option>
                        <option>Extra Small (XS)</option>
                        <option>Small (S)</option>
                        <option>Medium (M)</option>
                        <option>Large (L)</option>
                        <option>Extra Large (XL)</option>
                    </select>
                </div>
                <div class='form-group pl-3 pr-3'>
                    <select name='shirt_size' class='form-control border-pink' required>
                        <option selected disabled>Usual T-Shirt Size *</option>
                        <option>Extra Small (XS)</option>
                        <option>Small (S)</option>
                        <option>Medium (M)</option>
                        <option>Large (L)</option>
                        <option>Extra Large (XL)</option>
                    </select>
                </div>
                <div class='form-group pl-3 pr-3'>
                    <input name='leg_length' class='form-control border-pink' type='number' placeholder='Leg Length *' min='1' required>
                </div>
                <div class='form-group bg-white' id = "end-signup">
                        <label class = "form-check-label text muted">
                                <button type="button" class="btn btn-pink btn-sm btn-block" onclick = "location.href = 'manual'">Need help?</button>
                            </label>
                    <div class='form-check'>
                        <input class='form-check-input' type='checkbox' value='' id='validCheck' required>
                        <label class='form-check-label text-muted' for='validCheck'>
                            By using our services, you acknowledge that you have read, understood and agreed
                            to be bound by our <a href='http://www.fashionxproject.com/terms-of-service/' target='_blank'>
                            <u>Terms of Service</u></a>. By signing up, you agree to subscribe to our mailing list. 
                        </label>
                        
                    </div>
                </div>
                <div class='container text-center mb-4 bg-white ps-absolute'>
                    <button class='btn btn-pink btn-primary text-center' type='submit'>Sign Up</button>
                </div>
            </form>
        </div>

        <br/>

        <footer>
            <% include ../../partials/footer %>
        </footer>

        <script>
            // prevent highlighting of show/hide element in the password input 
            $('#showPassCheckbox').attr('unselectable', 'on').css('user-select', 'none').on('selectstart', false);

            // show or hide the password when the user clicks the show or hide element 
            function showPass(){
                var x = document.getElementById("passField");
                if (x.type === "password") {
                    x.type = "text";
                    $('#showPassCheckbox').text('Hide');
                    $('#showPassCheckbox').addClass('text-muted');
                } else {
                    x.type = "password";
                    $('#showPassCheckbox').text('Show');
                    $('#showPassCheckbox').removeClass('text-muted');
                }
            }
        </script>
    </body>
</html>