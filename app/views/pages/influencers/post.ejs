<!DOCTYPE html>
<html>
  <head>
    <% include ../../partials/head %>
  </head>
  <body>
      <header>
        <% include ../../partials/header %>
      </header>
    <main>
        <div class="container-fluid">
            <h1><b>Brand:</b> <%= post.brand %></h1>
            <hr class = "my-4">
            
            <tr>
            <% post.img_urls.forEach(function(pic) { %>
                  <td><img src="<%= pic %>" alt="<%= post.title %> Thumbnail" class="img-thumbnail" style="max-width: 200px;"></td>
            <% }); %>
            </tr>

            <h4><b>Size:</b> <%= post.size %> </h4>
            <h4><b>Asking Price:</b> <%= post.selling_price %></h4>
            <h4><b>Original Price:</b> <%= post.original_price %></h4>
            <h4><b>Condition:</b> <%= post.condition %></h4>
            <%if (post.description.length != 0) { %>
            <h4><b>Description:</b> <%= post.description %></h4>            
            <% } %>

            Date posted: <%= moment(post.date).format('M/D/YYYY') %>
        </div>
    </main>

    <footer>
      <% include ../../partials/footer %>
    </footer>
  </body>
</html>
